html
	head
		meta(name='viewport', content='initial-scale=1.0, user-scalable=no')
		title= title
		link(rel='stylesheet', href='/dist/css/bootstrap.min.css')
		link(rel='stylesheet', href='/dist/css/bootstrap-theme.min.css')
		link(rel='stylesheet', href="/stylesheets/style.css")

		script(type='text/javascript', src='//code.jquery.com/jquery.min.js')
		script(type='text/javascript', src='/dist/jquery.tmpl.min.js')
		script(type='text/javascript', src='/dist/js/bootstrap.min.js')
		script(type='text/javascript', src='/javascripts/index.js')


		script#expert-tmpl(type="text/x-jquery-tmpl")
			.profilepanel.col-md-4.first
				.panel.panel-primary
					.panel-heading
						h3.panel-title
							a(href="https://twitter.com/${screen_name}", target="_blank") @${screen_name}
							| &nbsp;
							.score.badge.text-right(title="score based on number of tweets and number of retweeted tweets") ${score}
					.panel-body.center
						.profileimage(style="background-image: url('${profile_image_url}')")
						ul.list-group
							li.list-group-item.description ${description}
							li.list-group-item.location ${location}
						.topicfrequency
							.badge ${retweetedtweets.length}
							span &nbsp;retweeted tweets on&nbsp;
							span.label.label-success ${topic}
							span &nbsp;since ${earliestRetweetedtweetDate}
						.topicfrequency
							.badge ${tweets.length}
							span &nbsp;tweets on&nbsp;
							span.label.label-success ${topic}
							span &nbsp;since ${earliestTweetDate}

						ul.tweets
							{{each tweets}}
							li.tweettext ${text}
							{{/each}}

						p
						.topicpercentage
							span topics the user tweets about
							ul.list-group.topics
								{{each topics}}
								li.list-group-item
									span.label.label-success ${topic} (${occurrence})
								{{/each}}


	body
		.container
			#title
				h1 Expert Extractor

			#search.jumbotron
				h1 Find and refine topic
				.lead type in your topic, and refine it further using tags
				.input-group.input-group-lg
					input#topicfield.form-control(type="text", placeholder="Topic, article URL or expert twitterhandle")
					span.input-group-btn
						button#searchbtn.btn.btn-default(type="button")
							span.glyphicon.glyphicon-search
							| &nbsp;search



			#topexpertlist
				h2 Top Experts for&nbsp;
					span#topic
				img.spinner(src="/images/spinner.gif")
				.row.container



